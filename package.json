{
    "name": "xc-db",
    "version": "1.0.0",
    "description": "Paragliding XC DB",
    "license": "GPL-3.0",
    "author": "Momtchil Momtchev <momtchil@momtchev.com>",
    "scripts": {
        "build": "npm run build:front && npm run build:back",
        "build:front": "npm run lang:compile && REACT_APP_BUILD=\"`git rev-parse --short HEAD` `date +%Y-%m-%d`\" react-scripts build",
        "build:back": "tsc && rollup -c rollup.config.js",
        "start": "react-scripts start",
        "test": "echo \"Error: no test specified\" && exit 1",
        "deploy:front": "tar -C build -zcf - `cd build; ls *.png; ls favicon* index*` manifest.json robots.txt static | mbuffer | ssh xcdb@yastreb.garga.net 'cat - | mbuffer | tar -C www -zxvf -'",
        "deploy:back": "tar -C build -zcf - back deps | mbuffer | ssh xcdb@yastreb.garga.net 'cat - | mbuffer | tar -zxvf -'",
        "deploy": "npm run deploy:back && npm run deploy:front && ssh xcdb@yastreb.garga.net 'systemctl --user restart dbserver.service'",
        "lang:extract": "formatjs extract src/front/*.tsx --out-file lang/en.json --format simple",
        "lang:compile": "formatjs compile --format simple lang/fr.json --ast --out-file src/compiled-lang/fr.json && formatjs compile --format simple lang/en.json --ast --out-file src/compiled-lang/en.json"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "dependencies": {
        "@reduxjs/toolkit": "^1.8.5",
        "bootstrap": "^5.2.1",
        "cors": "^2.8.5",
        "express": "^5.0.0-beta.1",
        "gdal-async": "^3.5.2",
        "geographiclib": "^1.52.2",
        "geotiff": "^2.0.5",
        "igc-parser": "^1.1.0",
        "igc-xc-score": "^1.6.1",
        "mysql": "^2.18.1",
        "ndarray": "^1.0.19",
        "ndarray-gdal": "^1.3.1",
        "ol": "^7.1.0",
        "pymport": "^1.0.0-rc.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-ga": "^3.3.1",
        "react-intl": "^6.1.2",
        "react-redux": "^8.0.4",
        "react-router-dom": "^6.4.1",
        "react-scripts": "5.0.1",
