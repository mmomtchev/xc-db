{
    "compilerOptions": {
        "module": "node16",
        "target": "es2022",
        "lib": [
            "es2022",
            "dom"
        ],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "outDir": "./build",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/back",
        "src/lib"
    ]
}